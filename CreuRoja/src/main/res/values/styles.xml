<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="NavigationDrawerSectionHeader">
        <item name="android:padding">5dp</item>
        <item name="android:background">#ccc</item>
    </style>

    <style name="NavigationDrawerToggeableButton">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">5dp</item>
    </style>
    <style name="InfoScreenLabel">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>
    <style name="InfoScreenInfo">
        <item name="android:layout_marginLeft">15dp</item>
    </style>

    <style name="location_index_toolbar">
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:background">#aa0000</item>
    </style>

    <style name="LoginNotice">
        <item name="android:background">@android:color/holo_red_light</item>
        <item name="android:padding">8dp</item>
    </style>
</resources>
