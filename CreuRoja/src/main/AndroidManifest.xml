<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.creuroja.android" >

    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.READ_SYNC_STATS" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/api_key" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".view.activities.locations.LocationsIndexActivity"
            android:label="@string/app_name"
            android:theme="@style/NoActionBar"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".view.activities.general.LoginActivity"
            android:label="@string/title_activity_login"
            android:parentActivityName=".view.activities.locations.LocationsIndexActivity"
            android:theme="@style/NoActionBar"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.activities.locations.LocationsIndexActivity" />
        </activity>
        <activity
            android:name=".view.activities.general.SettingsActivity"
            android:theme="@style/NoActionBar"
            android:label="@string/action_settings" >
        </activity>

        <service
            android:name="net.creuroja.android.model.webservice.auth.CreuRojaAuthenticatorService"
            android:enabled="true"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator" />
            </intent-filter>

            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/authenticator" />
        </service>

        <provider
            android:name="net.creuroja.android.model.db.CreuRojaProvider"
            android:authorities="net.creuroja.android.model.db.Provider"
            android:exported="false"
            android:syncable="true" >
        </provider>

        <activity
            android:name=".view.activities.locations.LocationDetailsActivity"
            android:label="@string/title_activity_location_details"
            android:theme="@style/NoActionBar"
            android:parentActivityName=".view.activities.locations.LocationsIndexActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.activities.locations.LocationsIndexActivity" />
        </activity>

        <service
            android:name=".model.locations.sync.LocationsSyncService"
            android:enabled="true"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.content.SyncAdapter" />
            </intent-filter>

            <meta-data
                android:name="android.content.SyncAdapter"
                android:resource="@xml/sync_adapter" />
        </service>

        <activity
            android:name=".view.activities.users.UserProfileActivity"
            android:label="@string/title_activity_user_profile" >
        </activity>
    </application>

</manifest>
